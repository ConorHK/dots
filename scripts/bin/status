#!/bin/sh

hostname=$(hostname)
network_status=$(check-network)
network=$(ssid)
date=$(date)

info_universal="$date|$network_status $network" 
if [ "$hostname" = "laptop" ]; then
  battery=$(batt)
  info_laptop="$(info_universal)| $battery"
  info="$(info_universal)| $battery"
else
  audio_status=$(audio --status)
  info="$info_universal|$audio_status"
fi

# Launch Rofi
rofi -no-lazy-grab -sep "|" -dmenu  \
-hide-scrollbar true \
-bw 0 \
-lines 4 \
-line-padding 10 \
-padding 20 \
-width 15 \
-columns 1 \
-color-enabled true \
<<<"$info"
